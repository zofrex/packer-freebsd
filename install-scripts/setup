PARTITIONS=da0

#!/bin/sh
echo 'hostname="vagrant"
ifconfig_em0="DHCP"
ifconfig_em0_ipv6="inet6 accept_rtadv"
sshd_enable="yes"
dumpdev="AUTO"' >> /etc/rc.conf

echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config
echo vagrant | pw mod user root -h 0
echo 'autoboot_delay="1"' >> /boot/loader.conf

gpart create -s GPT da1
gpart add -t freebsd-ufs da1
newfs -U /dev/da1p1
mkdir -p /stor/parity1

gpart create -s GPT da2
gpart add -t freebsd-ufs da2
newfs -U /dev/da2p1
mkdir -p /stor/data1

cat >> /etc/fstab <<EOF
/dev/da1p1	/stor/parity1	ufs	rw	0	2
/dev/da2p1	/stor/data1	ufs	rw	0	2
EOF

reboot
