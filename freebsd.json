{
  "variables": {
    "host_http_proxy": "{{env `HOST_HTTP_PROXY`}}"
  },
  "builders": [{
    "type": "vmware-iso",
    "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/releases/amd64/amd64/ISO-IMAGES/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
    "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "guest_os_type": "freebsd-64",
    "boot_command": [
      "<enter><wait10><wait10>s",
      "mkdir /tmp/floppy<enter>",
      "mount -t msdosfs /dev/fd0 /tmp/floppy<enter><wait5>",
      "bsdinstall script /tmp/floppy/setup<enter>"
    ],
    "boot_wait": "3s",
    "floppy_files": "install-scripts",
    "shutdown_command": "poweroff"
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "./download-vagrant-key.sh"
    },
    {
      "type": "file",
      "source": "tmp/vagrant.pub",
      "destination": "/tmp/vagrant.pub",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "script": "postinstall.sh",
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "environment_vars": [
        "HOST_HTTP_PROXY={{user `host_http_proxy`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}
