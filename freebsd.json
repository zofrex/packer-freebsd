{
  "variables": {
    "host_http_proxy": "{{env `HOST_HTTP_PROXY`}}"
  },
  "builders": [{
    "type": "vmware-iso",
    "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/releases/ISO-IMAGES/10.2/FreeBSD-10.2-RELEASE-amd64-disc1.iso",
    "iso_checksum": "97908f5cd00d86cafeb2c265bfabbd0aa79f87e9b6b31ecdb756bc96a4a62e93",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "guest_os_type": "freebsd-64",
    "boot_command": [
      "<enter><wait10><wait10>s",
      "mkdir /tmp/floppy<enter>",
      "mount -t msdosfs /dev/fd0 /tmp/floppy<enter><wait5>",
      "bsdinstall script /tmp/floppy/setup<enter>"
    ],
    "boot_wait": "3s",
    "floppy_files": "install-scripts",
    "shutdown_command": "poweroff",
    "disk_additional_size": [10240, 10240, 10240]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "vagrant.pub",
      "destination": "/tmp/vagrant.pub",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "script": "postinstall.sh",
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "environment_vars": [
        "HOST_HTTP_PROXY={{user `host_http_proxy`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}
