{
  "variables": {
    "host_http_proxy": "{{env `HOST_HTTP_PROXY`}}"
  },
  "builders": [{
    "type": "vmware-iso",
    "iso_url": "https://download.freebsd.org/ftp/releases/ISO-IMAGES/11.1/FreeBSD-11.1-RELEASE-amd64-disc1.iso",
    "iso_checksum": "cd35b6b406724416c436ae5eb73943d8248e267aee608c0539a969ae79e0201e6590a9ad7550162fecfb21d577ff40edafbf934ab45fda61c8f3d2c30c1f1e05",
    "iso_checksum_type": "sha512",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "guest_os_type": "freebsd-64",
    "boot_command": [
      "<enter><wait10><wait10>s",
      "mkdir /tmp/floppy<enter>",
      "mount -t msdosfs /dev/fd0 /tmp/floppy<enter><wait5>",
      "bsdinstall script /tmp/floppy/setup<enter>"
    ],
    "boot_wait": "3s",
    "floppy_files": "install-scripts",
    "shutdown_command": "poweroff",
    "disk_additional_size": [10240, 10240, 10240, 10240, 10240]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "vagrant.pub",
      "destination": "/tmp/vagrant.pub",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "script": "postinstall.sh",
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "environment_vars": [
        "HOST_HTTP_PROXY={{user `host_http_proxy`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}
